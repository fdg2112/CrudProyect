@model CrudProyect.Models.Contact

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Contacto</h2>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Editar contacto</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Edit","Contact")" method="post">
                    <input type="hidden" class="form-control" name="IdContact" value="@Html.DisplayTextFor(m => m.IdContact)" />
                    <div class="form-group">
                        <label>Nombres</label>
                        <input type="text" class="form-control" name="Firstname" value="@Html.DisplayTextFor(m => m.Firstname)" />
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" class="form-control" name="Lastname" value="@Html.DisplayTextFor(m => m.Lastname)" />
                    </div>
                    <div class="form-group">
                        <label>Telefono</label>
                        <input type="text" class="form-control" name="Phone" value="@Html.DisplayTextFor(m => m.Phone)" />
                    </div>
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" class="form-control" name="Email" value="@Html.DisplayTextFor(m => m.Email)" />
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar contacto</button>
                    <a class="btn btn-warning" href="@Url.Action("Index","Contact")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>