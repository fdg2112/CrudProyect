@model IEnumerable<CrudProyect.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MVC Conexion a BBDD sin Entity Framework</h2>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Lista de contactos</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("AddContact","Contact")">Agregar Contacto</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CrudProyect.Models.Contact item in Model)
                            {
                                <tr>
                                    <td>@item.Firstname</td>
                                    <td>@item.Lastname</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Edit","Contact", new { idcontact = item.IdContact })">Editar</a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Contact", new { idcontact = item.IdContact })">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>